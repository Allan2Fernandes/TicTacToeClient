<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="TicTacToeClient.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:TicTacToeClient.Views"
	xmlns:local="clr-namespace:TicTacToeClient">

	<TabBar>
        <ShellContent
            Title="EnterName"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:EnterNamePage}"/>
        <ShellContent
			Title="Game"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
            Title="HighScores"
            Icon="iconblank.png"
            ContentTemplate="{DataTemplate views:HighScoresPage}"/>
    </TabBar>
</Shell>
